# Database Configuration
DB_HOST="localhost"
DB_PORT="3306"
DB_NAME="email_assistant_db"
DB_USER="root"
DB_PASS=""

# JWT Configuration
JWT_SECRET="your_super_secret_jwt_key_here" # Replace with a strong, random key
JWT_EXPIRATION_TIME_SECONDS=3600 # 1 hour, for example

# LLM Configuration (User-specific keys are stored in the database)
# These could be system-wide defaults or fallbacks if needed, but generally not used for user-specific calls.
# OLLAMA_DEFAULT_ENDPOINT="http://localhost:11434"

# Application Configuration
APP_ENV="development" # development, production
API_BASE_URL="/api" # Base path for all API routes

# Encryption Key for API Keys stored in DB (MUST be a strong, random key)
# Generate a secure key, for example using: openssl rand -base64 32
ENCRYPTION_KEY="your_strong_encryption_key_for_api_keys"

